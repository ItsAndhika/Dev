<div class="row">
	<div class="col-md-8">
		<h2>Worker Details</h2>
		<div class="card" style="width: 18rem">
			<div class="card-body">
				<h5 class="card-title">Name : <%= worker.name %></h5>
				<h6 class="card-subtitle mb-2 text-muted">Age : <%= worker.age %></h6>
				<p class="card-text">Email : <%= worker.email %></p>
				<p class="card-text">Address : <%= worker.address %></p>
				<form action="/?_method=DELETE" method="post">
					<input type="hidden" name="_id" value="<%= worker._id %>" />
					<button
						type="submit"
						class="btn btn-danger badge d-inline mb-3"
						onclick="return confirm('Are you sure?')"
					>
						Delete
					</button>
				</form>
				<a href="/" class="card-link text-decoration-none"
					>&laquo; Back to workers list</a
				>
			</div>
		</div>
	</div>
</div>
