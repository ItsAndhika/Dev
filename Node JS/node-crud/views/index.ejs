<div class="row">
	<div class="col-md-6">
		<h2>Workers List</h2>
		<% if (msg.length !== 0) { %>
		<div class="alert alert-success" role="alert"><%= msg %></div>
		<% } %>
		<a href="/add" class="btn btn-primary my-2">Add Worker Data</a>
		<table class="table">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Name</th>
					<th scope="col">Action</th>
				</tr>
			</thead>
			<tbody>
				<% let num = 1 %> <% workers.forEach(worker => { %>
				<tr>
					<th scope="row"><%= num++ %></th>
					<td><%= worker.name %></td>
					<td>
						<a href="/details/<%= worker._id %>" class="btn btn-primary badge"
							>Details</a
						>
					</td>
				</tr>
				<% }) %>
			</tbody>
		</table>
	</div>
</div>
