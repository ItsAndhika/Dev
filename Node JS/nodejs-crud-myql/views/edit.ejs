<%- include('layouts/header') %> 
<%- include('layouts/navbar') %> 
    <div class="container mt-3">
        <h1>Add Worker Data</h1>
        <% worker.forEach(w => { %>
            <form action="/workers/edit" method="post">
                <input type="hidden" name="id" value="<%= w.id %>">
                <div class="mb-3">
                    <label for="name" class="form-label">Name : </label>
                    <input type="text" name="name" class="form-control" id="name" value="<%= w.name %>">
                </div>
                <div class="mb-3">
                    <label for="age" class="form-label">Age : </label>
                    <input type="number" name="age" class="form-control" id="age" value="<%= w.age %>">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email : </label>
                    <input type="email" name="email" class="form-control" id="email" value="<%= w.email %>">
                </div>
                <div class="mb-3">
                    <label for="address" class="form-label">Address : </label>
                    <input type="text" name="address" class="form-control" id="address" value="<%= w.address %>">
                </div>
                <button type="submit" class="btn btn-primary">Edit Data</button>
            </form>
        <% }) %>
    </div>
<%- include('layouts/footer') %> 